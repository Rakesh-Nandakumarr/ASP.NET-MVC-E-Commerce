<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestApp.styles.css" asp-append-version="true" />
</head>
<body class="admin-panel">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TestApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

<div class="d-flex">
    <aside class="sidebar bg-dark border-end p-3" style="width: 250px; min-height: 100vh;">
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-house"></i> Dashboard
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-box"></i> Products
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-cart"></i> Orders
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-light" asp-area="" asp-controller="Category" asp-action="Index">
                    <i class="bi bi-people"></i> Categories
                </a>
            </li>
        </ul>
    </aside>

    <main class="flex-grow-1 p-4">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>
</div>

<footer class="bg-dark text-white text-center py-3">
    <div class="container">
        &copy; 2024 - E-Commerce Admin Panel - <a href="#" class="text-decoration-none text-white">Privacy Policy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/admin.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
